{
  "name": "newspaper-blog",
  "version": "1.0.0",
  "description": "Headless Newspaper Stack - bun, eleventy, tailwind, htmx",
  "scripts": {
    "build:css": "tailwindcss -i ./src/style.css -o ./_site/style.css",
    "build": "bun run build:css && eleventy",
    "start": "concurrently \"bun run build:css --watch\" \"eleventy --serve\""
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@tailwindcss/typography": "^0.5.13",
    "concurrently": "^8.2.2",
    "tailwindcss": "^3.4.1"
  },
  "type": "module"
}
